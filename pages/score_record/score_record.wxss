.table {
  padding-bottom: 20rpx;
  border:1px solid #ccc;
  border-radius: 15rpx;
  width:90%;
  margin: 0 auto;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  border-bottom: 1px solid #ccc;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background:#fff;
  border-bottom: 1px solid #ccc;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  color: #ccc;
  display: flex;
  height: 2rem;
  align-items: center;
}

/* bar */
.icon{
  width:54rpx;
  height: 54rpx;
}
.tabBar{
  width:100%;
  position: fixed;
  z-index: 1000;
  bottom:0;
  padding:10rpx;
  margin-left:-4rpx;
  background:#fff;
  font-size:20rpx;
  color:#8A8A8A;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

 .tabBar-item{
  float:left;
  width:50%;
  text-align: center;
  overflow: hidden;
}
/*当前字体颜色*/
.tabBartext{
  color:red;
}