.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:0;
}

.top{
  width:100%;
  height:500rpx;
  background: -webkit-linear-gradient(#46a4e2, #fff);
  text-align: center;
  font-size: 35rpx;
  color:#fff;
  padding:25rpx 0;
}
.top .set{
  width:40rpx;
  height: 40rpx;
  position: absolute;
  right:40rpx;
  top:10rpx;
}
.top .set image{
  width:40rpx;
  height: 40rpx;
}
.top .info{
  margin-top: 35rpx;
}
.top .avatar image{
  width:155rpx;
  height: 155rpx;
  border-radius: 50%;
  display: inline-block;
  align-items: center;
}
.top .name{
  text-align: center;
}
.top .info .info_item{
  width:33.3%;
  display: inline-block;
  text-align: center;
}
.top .info .info_item image{
  width:80rpx;
  height: 80rpx;
}
.top .info .info_item .icon_info{
  font-size: 30rpx;
}


.top .more{
  width:100%;
  height: 65rpx;
  line-height: 65rpx;
  padding: 0;
  margin-top: 35rpx;
}
.top .more .more_item{
  display: inline-block;
  width:35%;
  height:65rpx;
  line-height: 65rpx;
   background: #8bc2e8;
   border-radius: 5rpx;
   margin-right: 50rpx;
   position: relative;
}
.top .more .more_item image{
  display: inline-block;
  height: 65rpx;
  width:65rpx;
  position: absolute;
  left: 40rpx;
}
.top .more .more_item .more_info{
  display: inline-block;
  position: absolute;
  font-size: 30rpx;
  top:3rpx;
  left:110rpx;
}

/* table */
.table {
 
  padding-bottom: 20rpx;
  border:1px solid #ccc;
  border-radius: 15rpx;
  font-size: 30rpx;
  width:90%;
  margin: 0 auto;
   margin-top:25rpx; 
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  border-bottom: 1px solid #ccc;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background:#fff;
  border-bottom: 1px solid #ccc;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 50%;
  justify-content: center;
  color: #ccc;
  display: flex;
  height: 2rem;
  align-items: center;
  text-align: left;
}

.score{
  color:#000;
}
.group{
  font-weight: bold;
  color:#000;
}
.member{
  color:#000;
}
.table .line{
  border:none;
}




/* bar */
.icon{
  width:54rpx;
  height: 54rpx;
}
.tabBar{
  width:100%;
  position: fixed;
  z-index: 1000;
  bottom:0;
  padding:10rpx;
  margin-left:-4rpx;
  background:#fff;
  font-size:20rpx;
  color:#8A8A8A;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

 .tabBar-item{
  float:left;
  width:33.3%;
  text-align: center;
  overflow: hidden;
}
/*当前字体颜色*/
.tabBartext{
  color:red;
}