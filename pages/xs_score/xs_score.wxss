.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:0;
}
.top{
  width:100%;
  background: #ccc;
  text-align: center;
  font-size: 35rpx;
  padding:25rpx 0;
}
.top .top_item{
  display: inline-block;
  width:33.3%;
}
/* table */
.table {
 
  padding-bottom: 20rpx;
  border:1px solid #ccc;
  border-radius: 15rpx;
  font-size: 30rpx;
  width:90%;
  margin: 0 auto;
   margin-top:25rpx; 
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  border-bottom: 1px solid #ccc;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background:#fff;
  border-bottom: 1px solid #ccc;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 50%;
  justify-content: center;
  color: #ccc;
  display: flex;
  height: 2rem;
  align-items: center;
  text-align: left;
}

.score{
  color:#000;
}
.group{
  font-weight: bold;
  color:#000;
}
.member{
  color:#000;
}
.table .line{
  border:none;
}



/* bar */
.icon{
  width:54rpx;
  height: 54rpx;
}
.tabBar{
  width:100%;
  position: fixed;
  z-index: 1000;
  bottom:0;
  padding:10rpx;
  margin-left:-4rpx;
  background:#fff;
  font-size:20rpx;
  color:#8A8A8A;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

 .tabBar-item{
  float:left;
  width:33.3%;
  text-align: center;
  overflow: hidden;
}
/*当前字体颜色*/
.tabBartext{
  color:red;
}